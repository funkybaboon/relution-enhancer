{
  "manifest_version": 2,
  "name": "Relution Enhancer",
  "description": "Login without a hassle into Relution",
  "version": "2.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "https://*.relution.io/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}